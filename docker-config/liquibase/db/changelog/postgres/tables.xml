    <changeSet id="3-create-transaction-object-links" author="sudarina">
        <createTable tableName="transaction_object_links">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="transaction_digest" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="object_id" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="object_version" type="BIGINT"/>
            <column name="object_digest" type="VARCHAR(128)"/>
            <column name="relation_type" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE transaction_object_links
                ADD CONSTRAINT chk_relation_type
                    CHECK (relation_type IN ('INPUT', 'OUTPUT', 'MUTATED', 'CREATED', 'UNWRAPPED', 'WRAPPED', 'DELETED', 'GAS', 'UNWRAPPED_THEN_DELETED'));
        </sql>
    </changeSet>
