    <changeSet id="1-create-transactions" author="sudarina">
        <createTable tableName="transactions">
            <column name="digest" type="TEXT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sender" type="TEXT"/>
            <column name="epoch" type="BIGINT"/>
            <column name="gas_price" type="BIGINT"/>
            <column name="gas_budget" type="BIGINT"/>
            <column name="timestamp_ms" type="BIGINT"/>
            <column name="status" type="TEXT"/>
            <column name="executed_epoch" type="BIGINT"/>
            <column name="computation_cost" type="BIGINT"/>
            <column name="storage_cost" type="BIGINT"/>
            <column name="storage_rebate" type="BIGINT"/>
            <column name="non_refundable_storage_fee" type="BIGINT"/>
        </createTable>
    </changeSet>

